{
  "name": "@maximilian-hammerl/deno-project-config-check",
  "version": "0.1.1",
  "license": "MIT",
  "lock": false,
  "tasks": {
    "format": "deno fmt --config deno.json",
    "lint": "deno lint --fix --config deno.json",
    "check": "deno check --config deno.json **/*.ts",
    "validate": "deno task format && deno task lint && deno task check",
    "dev": "deno run --allow-read --allow-write --allow-run main.ts",
    "download-deno-config-file-json-schema": "curl -L -O https://deno.land/x/deno/cli/schemas/config-file.v1.json"
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.11",
    "@std/jsonc": "jsr:@std/jsonc@^1.0.1"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended",
        "jsr"
      ]
    }
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true
  },
  "exports": "./src/main.ts",
  "publish": {
    "include": [
      "LICENSE.md",
      "README.md",
      "src/**/*.ts"
    ]
  }
}
